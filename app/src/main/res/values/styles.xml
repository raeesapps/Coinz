<!-- Defines the theme of the application-->
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="bottomNavigationStyle">@style/Widget.Design.BottomNavigationView</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorPrimaryDark</item>
    </style>

    <!-- The theme of the splash screen -->
    <style name="AppTheme.Launcher">
        <item name="colorPrimary">@color/gradientStart</item>
        <item name="colorPrimaryDark">@color/gradientStart</item>
        <item name="android:windowBackground">@drawable/launch_screen</item>
    </style>

</resources>
